<Window x:Class="TeraCyteViewer.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TeraCyteViewer.Views"
        Title="Image History" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <local:ClassificationColorConverter x:Key="ClassificationColorConverter"/>
        <Style x:Key="HistoryItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="4" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸ“š Image History" 
                           FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#2E7D32"/>
                <TextBlock x:Name="HistoryCountText"
                           Text="No history available"
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- History List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="HistoryItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource HistoryItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Image -->
                                <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,15,0">
                                    <Image Source="{Binding Image}" 
                                           Height="120" 
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <!-- Details -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding ImageId}" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#1976D2"
                                               Margin="0,0,0,5"/>
                                    
                                    <TextBlock Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                               FontSize="12" 
                                               Foreground="#666666"
                                               Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Intensity" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                                            <TextBlock Text="{Binding Results.IntensityAverage, StringFormat='{}{0:F2}'}" 
                                                       FontSize="14" FontWeight="Bold" Foreground="#2E7D32"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                            <TextBlock Text="Focus Score" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                                            <TextBlock Text="{Binding Results.FocusScore, StringFormat='{}{0:F2}'}" 
                                                       FontSize="14" FontWeight="Bold" Foreground="#1976D2"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Classification" FontWeight="SemiBold" FontSize="12" Foreground="#666666"/>
                                            <TextBlock Text="{Binding Results.ClassificationLabel}"
                                                       FontSize="14" FontWeight="Bold"
                                                       Foreground="{Binding Results.ClassificationLabel, Converter={StaticResource ClassificationColorConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>